{
  "name": "doma-bot",
  "version": "1.0.0",
  "description": "Doma blockchain event notification bot with mini-app",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "api": "node api-server.js",
    "dev:api": "nodemon api-server.js",
    "mini-app": "cd mini-app && npm run dev",
    "build": "cd mini-app && npm run build",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:start:dev": "pm2 start ecosystem.config.cjs --env development",
    "health": "node -e \"import('./index.js').then(m => console.log('Health:', m.healthMonitor.getHealthStatus()))\"",
    "queue": "node -e \"import('./index.js').then(m => console.log('Queue:', m.requestQueue.getStatus()))\"",
    "status": "node -e \"import('./index.js').then(m => console.log('Status:', m.processManager.getStatus()))\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "ethers": "^6.11.1",
    "express": "^4.21.2",
    "mongodb": "^6.19.0",
    "node-telegram-bot-api": "^0.64.0",
    "web3": "^4.4.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "blockchain",
    "doma",
    "events",
    "notifications",
    "crash-recovery",
    "process-management"
  ],
  "author": "Dennis Wambua",
  "license": "MIT"
}
